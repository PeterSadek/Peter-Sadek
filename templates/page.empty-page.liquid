{% layout none %}

<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page.title }}</title>
  {{ content_for_header }} 
  <style>
    *, *::before, *::after {
      box-sizing: border-box
    }
    body {
      margin: 0;
      font-family: 'Jost', Arial, Helvetica, sans-serif
    }
  </style>
</head>
<body>
  {{ content_for_layout }}
  {% section 'banner' %}
  {% section 'grid' %}
</body>
</html>