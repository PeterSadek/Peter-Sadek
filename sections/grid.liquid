{{ "grid.css" | asset_url | stylesheet_tag }}

<section class="products">
  <h3>Tisso vison in the wild</h3>
  <div class="grid">
    {% for product in collections.all.products limit: 6 %}
      <div class="product-item">
        <img
          class="product-image"
          src="{{product.featured_image |  image_url }}"
          alt="{{product.title}}"
          width="100%"
          height="444px">
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Grid Section",
    "settings": [],
    "presets": [
      {
        "name": "Grid Section"
      }
    ]
  }
{% endschema %}